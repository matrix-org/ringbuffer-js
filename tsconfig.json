{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": ["src/**/*.ts", "test/**/*.test.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}